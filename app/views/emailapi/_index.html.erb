<footer>
    <div class="footer" id="footer">
        <div class="container">
            <div class="footer__header">
                <p id="footer__header-text">subscribe to our newsletter</p>
            </div>
            <div class="row">
                <div class="col-md-6 col-md-offset-3 col-xs-8 col-xs-offset-2 subscribe-container">
                  <%= form_tag('/emailapi/subscribe', method: "post", id: "subscribe", remote: "true", class: "form-inline") do -%>
                    <%= email_field(:email, :address, {class: "form-control", id: "email", placeholder: "email address"}) %>
                    <%= submit_tag("Sign me up!", {class: "form-control override"}) %>
                  <% end %>
                </div>
            </div>
            <div>
                <%= image_tag('logo', class: "footer__image") %>
            </div>
            <div class="row">
                <div class="col-md-6 col-md-offset-3 col-xs-10 col-xs-offset-1 footer__content-container">
                    <p id="footer__copy">
                        Greenville Beer Exchange &copy; 2017
                    </p>
                </div>
            </div>
            <!--/.row-->
        </div>
        <!--/.container-->
    </div>
    <!--/.footer-->
</footer>
