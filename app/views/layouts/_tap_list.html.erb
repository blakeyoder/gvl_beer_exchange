<div class="row">
    <div class="col-md-8">
        <div class="row">
            <div class="col-md-12">
                <div class="well" id="tap-header">
                    <span>Currently on tap</span>
                </div>
            </div>
            <% @beers["items"].each do |beer| %>
            <div class="col-md-12">
                 <div class="well tap-well">
                    <div class="row">
                        <div class="col-md-4">
                            <p><%= beer["name"] %></p>
                            <span id="sub-text"><%= beer["brewery"] %></span>
                            <br>
                            <span id="sub-text"><%= beer["brewery_location"] %></span>
                        </div>
                        <div class="col-md-4">
                            <p><%= beer["style"] %></p>
                        </div>
                        <div class="col-md-4">
                            <p><span id="abv"><%= beer["abv"] %>%</span></p>
                        </div>
                    </div>
                </div>
            </div>               
            <% end %>
        </div>
    </div>
    <%= render 'layouts/about' %>
</div>
